<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 login-text">Login on Wanderlust</h1>
    <div class="col-6 offset-3 login-form">
        <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username </label>
                <input type="text" name="username" id="username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password </label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>
            <button class="btn btn-success mb-3">Login</button>
        </form>
        <p>Don't have an account ? <a href="/signup" style="margin-left: 5px;">Sign-up</a></p>
    </div>
</div>